{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["ES6", "DOM"],
    "allowJs": true,
    "checkJs": true,
    "jsx": "react",
    "rootDir": "src",
    "removeComments": true,
    "importHelpers": true,
    "downlevelIteration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "isolatedModules": true,
    "noEmit": true,
    "esModuleInterop": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "*/*.test.ts"]
}